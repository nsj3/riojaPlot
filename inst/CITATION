if(!exists("meta") || is.null(meta)) meta <- packageDescription("riojaPlot")

citHeader("To cite package 'riojaPlot' in publications use:")

citEntry(entry="Manual",
	title ="riojaPlot: Stratigraphic diagrams in R",
	author = personList(as.person("Steve Juggins")),
	year = format(as.Date(meta$Date), "%Y"),
	note = paste("R package version", meta$Version),
	url = "https://github.com/nsj3/riojaPlot",
	textVersion =	paste("Juggins, S. (",format(as.Date(meta$Date), "%Y"),") ", 
  "riojaPlot: Stratigraphic diagrams in R, package version (",
	meta$Version, ")."," (https://github.com/nsj3/riojaPlot).", sep="")
)
